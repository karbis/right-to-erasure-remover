{
	"manifest_version": 3,
	"name": "Remove Right-To-Erasure Requests",
	"version": "1.0",
	"description": "Removes Right-To-Erasure Requests from your Roblox messages",
	
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	
	"content_scripts": [
		{
			"js": ["scripts/content.js"],
			"matches": [
				"https://www.roblox.com/*"
			]
		}
	]
}